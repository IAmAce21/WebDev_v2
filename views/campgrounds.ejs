<% include partials/header %>

<div class="container">
    <header class="jumbotron">
        <h1>Welcome to campgrounds</h1>
        <div class="col-lg-12">
            <p>View our handpicked campgrounds allover the world!</p>
            <a href="/campgrounds/new" class="btn btn-primary">Create new campground</a>
        </div>
    </header>
    
    <div class="row">
        <% campgrounds.forEach(function(campground){ %>
            <div>
                <div class="col-md-3 col-sm-6">
                    <div class="card" style="width: 18rem;">
                        <img src="<%= campground.image %>">
                        <div class="card-body">
                            <h5 class="card-title"><%= campground.name %></h5>
                            <p class="card-text">Lorem ipsum dolor sit amet consectetur, adipisicing elit. Molestias dolor minima pariatur reprehenderi</p>
                        </div>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
    <div>
        <a href="/" class="btn btn-lg btn-primary">Go back</a>
    </div>
</div>

<% include partials/footer %>